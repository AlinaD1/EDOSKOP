<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Разрешения -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" android:required="true" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EDOSKOP"
        tools:targetApi="31">

        <!-- Стартовая активность - LoginActivity -->
        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Регистрация -->
        <activity
            android:name=".RegisterActivity"
            android:exported="true" />

        <!-- Профиль -->
        <activity
            android:name=".ProfileActivity"
            android:exported="true" />

        <!-- Избранное -->
        <activity
            android:name=".FavoritesActivity"
            android:exported="true" />

        <!-- Мои рецепты -->
        <activity
            android:name=".MyRecipesActivity"
            android:exported="true" />

        <!-- Результаты поиска -->
        <activity
            android:name=".RecipeResultsActivity"
            android:exported="true" /> <!-- Добавлена активность -->

        <!-- Поиск рецептов -->
        <activity
            android:name=".SearchRecipesActivity"
            android:exported="true" />

        <activity
            android:name=".EditRecipeActivity"
            android:exported="true" />

        <!-- Добавление рецепта -->
        <activity
            android:name=".AddRecipeActivity"
            android:exported="true" />

        <!-- Детали рецепта -->
        <activity
            android:name=".RecipeDetailActivity"
            android:exported="true" />

        <activity
            android:name=".EditProfileActivity"
            android:exported="true" />



    </application>
</manifest>


